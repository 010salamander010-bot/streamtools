    <!-- Click handler to show UI if hidden -->
    <div id="ui-trigger" class="absolute inset-0 z-0 hidden"></div>

    <script>
        // --- Configuration ---
        const state = {
            audioContext: null,
            analyser: null,
            microphone: null,
            dataArray: null,
            isTalking: false,
            
            // Frame Data
            idleFrames: ["https://cdn3.emoji.gg/emojis/8422-blobcat-coffee.png"],
            talkFrames: ["https://cdn3.emoji.gg/emojis/9686-blobcat-hyper.gif"],
            
            // Animation State
            currentFrameIndex: 0,
            lastFrameTime: 0,
            
            volume: 0
        };

        const els = {
            avatarContainer: document.getElementById('avatar-container'),
            avatarImg: document.getElementById('avatar-img'),
            controls: document.getElementById('controls'),
            volMeter: document.getElementById('vol-meter'),
            uiTrigger: document.getElementById('ui-trigger'),
            // Inputs
            threshold: document.getElementById('slider-threshold'),
            bounce: document.getElementById('slider-bounce'),
            speed: document.getElementById('slider-speed'),
            speedVal: document.getElementById('speed-val'),
            bgColor: document.getElementById('bg-color-picker')
        };

        // --- Audio Logic ---
        document.getElementById('btn-start').addEventListener('click', async () => {
            try {
                const AudioContext = window.AudioContext || window.webkitAudioContext;
                state.audioContext = new AudioContext();
                const stream = await navigator.mediaDevices.getUserMedia({ audio: true });
                
                state.microphone = state.audioContext.createMediaStreamSource(stream);
                state.analyser = state.audioContext.createAnalyser();
                state.analyser.fftSize = 512;
                state.microphone.connect(state.analyser);
                
                state.dataArray = new Uint8Array(state.analyser.frequencyBinCount);
                
                document.getElementById('btn-start').innerText = "‚úÖ Mic Active";
                document.getElementById('btn-start').className = "w-full bg-gray-700 text-green-400 font-bold py-2 rounded border border-green-900";
                
                // Start Loop
                animate();
            } catch (err) {
                alert("Microphone denied. Please check browser permissions.");
            }
        });

        // --- Animation Loop ---
        function animate() {
            requestAnimationFrame(animate);
            
            // 1. Audio Processing
            if (state.analyser) {
                state.analyser.getByteFrequencyData(state.dataArray);
                let sum = 0;
                for(let i = 0; i < state.dataArray.length; i++) sum += state.dataArray[i];
                const average = sum / state.dataArray.length;
                state.volume = state.volume * 0.8 + average * 0.2; // Smooth
                els.volMeter.innerText = Math.floor(state.volume);
            }

            // 2. Logic: Talking vs Idle
            const threshold = parseInt(els.threshold.value);
            const wasTalking = state.isTalking;
            state.isTalking = state.volume > threshold;

            // Reset frame index on state change for snappy transition
            if (wasTalking !== state.isTalking) {
                state.currentFrameIndex = 0;
                state.lastFrameTime = 0;
            }

            // 3. Frame Cycling Logic
            const now = Date.now();
            // Note: Slider is 'ms per frame'. Lower value = Faster.
            // HTML slider goes 50 (Fast) to 1000 (Slow). 
            // We inverted the direction in HTML (dir="rtl") so Right is Fast visually if we want, 
            // but here we just use the raw ms value.
            const frameDuration = parseInt(els.speed.value); 
            
            if (now - state.lastFrameTime > frameDuration) {
                const activeFrames = state.isTalking ? state.talkFrames : state.idleFrames;
                
                // Advance frame
                state.currentFrameIndex = (state.currentFrameIndex + 1) % activeFrames.length;
                
                // Update Image
                if(activeFrames.length > 0) {
                    els.avatarImg.src = activeFrames[state.currentFrameIndex];
                }
                
                state.lastFrameTime = now;
            }

            // 4. Physics (Bounce)
            const bounceFactor = parseInt(els.bounce.value) / 1000;
            let scaleY = 1;
            let scaleX = 1;
            let translateY = 0;

            if (state.volume > 1) {
                const intensity = Math.max(0, state.volume - threshold); 
                const deformation = intensity * bounceFactor; 
                scaleY = 1 + deformation;
                scaleX = 1 - (deformation * 0.4); 
                translateY = - (deformation * 50); 
            }

            // Shake
            let rotate = 0;
            if (state.volume > 60) rotate = (Math.random() - 0.5) * (state.volume / 10);

            els.avatarContainer.style.transform = `translate(-50%, -50%) translate(0px, ${translateY}px) scale(${scaleX}, ${scaleY}) rotate(${rotate}deg)`;
            
            // Brightness Flash
            els.avatarImg.style.filter = state.volume > 90 ? "brightness(1.3)" : "brightness(1.0)";
        }

        // --- File Upload Logic (Multi-File) ---
        function handleUpload(inputId, labelId, stateKey) {
            document.getElementById(inputId).addEventListener('change', function(e) {
                const files = Array.from(e.target.files);
                if (files.length > 0) {
                    // Sort by name (frame1, frame2, etc.)
                    files.sort((a, b) => a.name.localeCompare(b.name, undefined, { numeric: true, sensitivity: 'base' }));
                    
                    const loadedFrames = [];
                    let loadedCount = 0;

                    files.forEach((file, index) => {
                        const reader = new FileReader();
                        reader.onload = function(event) {
                            // Store in correct index to maintain sort order despite async load
                            loadedFrames[index] = event.target.result;
                            loadedCount++;
                            
                            if (loadedCount === files.length) {
                                // All loaded
                                state[stateKey] = loadedFrames;
                                document.getElementById(labelId).innerText = `‚úÖ Loaded ${files.length} frames`;
                                document.getElementById(labelId).classList.add('text-green-400');
                            }
                        };
                        reader.readAsDataURL(file);
                    });
                }
            });
        }

        handleUpload('input-idle', 'label-idle', 'idleFrames');
        handleUpload('input-talk', 'label-talk', 'talkFrames');

        // --- Background Logic ---
        
        // 1. Color Picker
        els.bgColor.addEventListener('input', (e) => {
            document.body.style.backgroundImage = 'none'; // Color overrides image
            document.body.style.backgroundColor = e.target.value;
        });

        // 2. Image Upload
        document.getElementById('input-bg').addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    document.body.style.backgroundImage = `url(${event.target.result})`;
                    document.getElementById('label-bg').innerText = "‚úÖ BG Loaded";
                };
                reader.readAsDataURL(file);
            }
        });

        // 3. Sizing
        window.setBgSize = (size) => {
            document.body.style.backgroundSize = size;
        };

        // --- UI Hiding ---
        document.getElementById('hide-ui').addEventListener('click', () => {
            els.controls.classList.add('hidden');
            els.uiTrigger.classList.remove('hidden');
        });

        els.uiTrigger.addEventListener('click', () => {
            els.controls.classList.remove('hidden');
            els.uiTrigger.classList.add('hidden');
        });

        // Update Speed Label
        els.speed.addEventListener('input', (e) => {
            els.speedVal.innerText = e.target.value;
        });

    </script>
</body>
</html>
